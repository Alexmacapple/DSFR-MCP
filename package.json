{
  "name": "dsfr-mcp",
  "version": "1.3.0",
  "description": "MCP Server complet pour le Système de Design de l'État Français (DSFR)",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:performance": "jest --testPathPattern=test/performance",
    "test:schemas": "jest --testPathPattern=test/unit/schemas",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mcp": "node scripts/test-mcp.js",
    "test:data": "node scripts/run-data-quality-checks.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "build:index": "node scripts/build-index.js",
    "validate": "node scripts/validate-html.js",
    "verify-data": "node scripts/verify-data-integrity.js",
    "standardize-files": "node scripts/standardize-filenames.js",
    "validate-metadata": "node scripts/validate-yaml-metadata.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:check": "eslint src/ --max-warnings 0",
    "lint:ci": "eslint src/ --max-warnings 0",
    "lint:dev": "eslint src/ --max-warnings 0",
    "security:audit": "npm audit --audit-level=high",
    "quality:check": "npm run lint:check && npm run test:coverage",
    "benchmark": "node scripts/benchmark-parser-v2.js",
    "quick-benchmark": "node scripts/quick-benchmark.js"
  },
  "keywords": [
    "mcp",
    "dsfr",
    "design-system",
    "france",
    "accessibilité",
    "rgaa"
  ],
  "author": "Alex",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "jsdom": "^23.0.0",
    "lru-cache": "^11.1.0",
    "marked": "^9.1.0",
    "ora": "^5.4.1",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
